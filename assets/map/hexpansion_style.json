{
    "hexpansion_layers": [
        {
            "id": "hexpansions_symbol",
            "type": "circle",
            "source": "hexpansions",
            "source-layer": "",
            "minzoom": 15,
            "paint": {
                "circle-color": ["get", "colour"],
                "circle-radius": {
                    "stops": [
                        [16, 4],
                        [24, 20]
                    ]
                },
                "circle-blur": 0.2,
                "circle-stroke-width": 1.5
            }
        },
        {
            "id": "hexpansions_text",
            "type": "symbol",
            "source": "hexpansions",
            "source-layer": "",
            "minzoom": 17,
            "maxzoom": 24,
            "layout": {
                "text-field": [
                    "format",
                    ["get", "name"], { "font-scale": 1 },
                    ["literal", "\n"], {},
                    ["get", "difficulty"], { "font-scale": 0.8 }
                ],
                "text-font": ["Open Sans Regular"],
                "text-offset": [0, -1.8],
                "text-size": {
                    "stops": [
                        [17, 11],
                        [24, 16]
                    ]
                }
            },
            "paint": {
                "text-halo-color": "#ffffff",
                "text-halo-width": 1,
                "text-halo-blur": 1
            }
        },
        {
            "id": "gchqnet_hq_symbol",
            "type": "symbol",
            "source-layer": "",
            "source": "gchqnethq",
            "minzoom": 15,
            "layout": {
                "icon-image": "gchqnethq",
                "icon-size": 0.5,
                "icon-allow-overlap": true
            }
        },
        {
            "id": "gchqnet_scoreboard_symbol",
            "type": "symbol",
            "source-layer": "",
            "source": "gchqnetscoreboard",
            "minzoom": 15,
            "layout": {
                "icon-image": "gchqnetscoreboard",
                "icon-size": 0.5,
                "icon-allow-overlap": true
            }
        }
    ]
}